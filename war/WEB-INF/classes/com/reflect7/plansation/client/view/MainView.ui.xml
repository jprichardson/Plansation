<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:plan="urn:import:com.reflect7.plansation.client.view">

	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.main-view {
			background-color: #EEE;
		}
		
		.test {
			background-color: red;	
		}
		
		.main-view-panel {
			background-color: white;
			margin: 10px;
			z-index: 2;	
		}
		
		.task-list {
			width: 100%;
			height: 100%;	
		}
	</ui:style>

	<g:DockLayoutPanel unit='EM' styleName="{style.main-view}">
		<g:north size='4' styleName="{style.main-view-panel}">
			<g:Label>Header</g:Label>
		</g:north>
		<g:center>
			<g:SplitLayoutPanel ui:field="splitterPanel" styleName="{style.main-view-panel}">
				<g:west size='160' styleName="{style.main-view-panel}">
					<plan:TreeTaskPanel ui:field="treeTaskPanel"></plan:TreeTaskPanel>
				</g:west>
				
				<g:center styleName="{style.main-view-panel}">
					<g:DockLayoutPanel unit="PX">
						<g:north size="30">
							<g:HorizontalPanel>
								<g:Button ui:field="buttonStartIteration">Start Iteration</g:Button>
								<g:Button ui:field="buttonEndIteration">End Iteration</g:Button>
								<g:Button ui:field="buttonAddTask">Add Task</g:Button>
							</g:HorizontalPanel>
						</g:north>
						<g:center>
							<plan:ListTaskPanel ui:field="listTaskPanel"></plan:ListTaskPanel>
						</g:center>
					</g:DockLayoutPanel>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 
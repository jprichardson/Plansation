<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:com.reflect7.commongwt.client.ui.widget"
>
	<ui:style>
		.item { 

			margin: 5px;
			width: 100%;
			 border-radius: 6px;
   			-moz-border-radius: 6px;
		}
	</ui:style>

	<g:LayoutPanel addStyleNames="{style.item}">
		<g:layer>
			<g:DockLayoutPanel unit='PX'>
			<g:center>
				<g:ScrollPanel>
					<g:Tree ui:field="treeTasks"></g:Tree>
				</g:ScrollPanel>
			</g:center>
			<g:south size="25">
				<w:TextBox width="100%"   ui:field="textTask"  placeholder="Enter task..."></w:TextBox>
			</g:south>
		</g:DockLayoutPanel>
		</g:layer>
		
		
	</g:LayoutPanel>
	

	
</ui:UiBinder> 
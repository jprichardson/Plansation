<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:com.reflect7.commongwt.client.ui.widget"
>
	<ui:style>
		.panel{
			padding: 3px;	
		}
	</ui:style>

	<g:DockLayoutPanel unit='PX' styleName="{style.panel}">
		<g:center>
			<g:Tree ui:field="treeTasks"></g:Tree>
		</g:center>
		<g:south size="25">
			<w:TextBox ui:field="textTask" width="100%" placeholder="Enter task..."></w:TextBox>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 